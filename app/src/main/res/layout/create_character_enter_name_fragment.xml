<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enter_name_constraint_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/createCharacterEnterNameIntroductionFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.437">

            <TextView
                android:id="@+id/createCharacterEnterNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/createCharacterEnterNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createCharacterEnterNameTextView"
                android:layout_marginTop="0dp"
                android:background="@drawable/edit_text_border"
                android:fontFamily="sans-serif-condensed"
                android:hint="@string/enterNameHint"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="22sp" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
