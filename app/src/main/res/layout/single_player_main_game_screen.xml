<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_player_main_game_screen_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/singlePlayerMainScreenLayoutBg"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/mainScreenHeaderRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mainGameNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/mainGameScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/profile_button_icon"
            android:backgroundTint="#FFFFFF"
            android:visibility="visible" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/single_player_main_game_screen_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fillViewport="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainScreenHeaderRelativeLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/singlePlayerMainGameLevel10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:alpha="0.5"
                android:background="@drawable/locked_round_button_icon"
                android:enabled="false" />

            <Button
                android:id="@+id/singlePlayerMainGameLevel9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:alpha="0.5"
                android:background="@drawable/locked_round_button_icon"
                android:enabled="false" />

            <Button
                android:id="@+id/singlePlayerMainGameLevel8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:alpha="0.5"
                android:background="@drawable/locked_round_button_icon"
                android:enabled="false" />

            <Button
                android:id="@+id/singlePlayerMainGameLevel7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:alpha="0.5"
                android:background="@drawable/locked_round_button_icon"
                android:enabled="false" />


            <Button
                android:id="@+id/singlePlayerMainGameLevel6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:alpha="0.5"
                android:background="@drawable/locked_round_button_icon"
                android:enabled="false" />

            <Button
                android:id="@+id/singlePlayerMainGameLevel5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:alpha="0.5"
                android:background="@drawable/locked_round_button_icon"
                android:enabled="false" />

            <Button
                android:id="@+id/singlePlayerMainGameLevel4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:alpha="0.5"
                android:background="@drawable/locked_round_button_icon"
                android:enabled="false" />

            <Button
                android:id="@+id/singlePlayerMainGameLevel3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:alpha="0.5"
                android:background="@drawable/locked_round_button_icon"
                android:enabled="false" />

            <Button
                android:id="@+id/singlePlayerMainGameLevel2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:alpha="0.5"
                android:background="@drawable/locked_round_button_icon"
                android:enabled="false" />

            <Button
                android:id="@+id/singlePlayerMainGameLevel1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/round_button_icon"
                android:enabled="false"
                android:text="@string/One"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>